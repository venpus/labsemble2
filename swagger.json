{
  "openapi": "3.0.0",
  "info": {
    "title": "Labsemble Manufacturing API",
    "description": "Labsemble 제조업 관리 시스템의 REST API 문서",
    "version": "1.0.0",
    "contact": {
      "name": "Labsemble Team"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "개발 서버"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "사용자 ID"
          },
          "username": {
            "type": "string",
            "description": "사용자명"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "이메일"
          },
          "companyName": {
            "type": "string",
            "description": "회사명"
          },
          "contactPerson": {
            "type": "string",
            "description": "담당자명"
          },
          "phone": {
            "type": "string",
            "description": "전화번호"
          },
          "isAdmin": {
            "type": "boolean",
            "description": "관리자 여부"
          },
          "partnerName": {
            "type": "string",
            "nullable": true,
            "description": "파트너명"
          }
        }
      },
      "MJProject": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "프로젝트 ID"
          },
          "projectName": {
            "type": "string",
            "description": "프로젝트명"
          },
          "description": {
            "type": "string",
            "description": "프로젝트 설명"
          },
          "quantity": {
            "type": "integer",
            "description": "수량"
          },
          "targetPrice": {
            "type": "number",
            "description": "목표 가격"
          },
          "referenceLinks": {
            "type": "string",
            "description": "참조 링크 (JSON)"
          },
          "projectOwnerId": {
            "type": "integer",
            "description": "프로젝트 소유자 ID"
          },
          "projectCreatorId": {
            "type": "integer",
            "description": "프로젝트 생성자 ID"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "생성일시"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "수정일시"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "에러 메시지"
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["인증"],
        "summary": "회원가입",
        "description": "새로운 사용자를 등록합니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email", "password", "contactPerson", "phone"],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "사용자명"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "이메일"
                  },
                  "password": {
                    "type": "string",
                    "description": "비밀번호"
                  },
                  "companyName": {
                    "type": "string",
                    "description": "회사명"
                  },
                  "contactPerson": {
                    "type": "string",
                    "description": "담당자명"
                  },
                  "phone": {
                    "type": "string",
                    "description": "전화번호"
                  },
                  "partnerName": {
                    "type": "string",
                    "description": "파트너명 (선택사항)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "회원가입 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["인증"],
        "summary": "로그인",
        "description": "사용자 로그인을 처리합니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "사용자명"
                  },
                  "password": {
                    "type": "string",
                    "description": "비밀번호"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "로그인 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/mj-project/register": {
      "post": {
        "tags": ["MJ 프로젝트"],
        "summary": "프로젝트 등록",
        "description": "새로운 MJ 프로젝트를 등록합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["projectName", "description", "quantity", "targetPrice"],
                "properties": {
                  "projectName": {
                    "type": "string",
                    "description": "프로젝트명"
                  },
                  "description": {
                    "type": "string",
                    "description": "프로젝트 설명"
                  },
                  "quantity": {
                    "type": "integer",
                    "description": "수량"
                  },
                  "targetPrice": {
                    "type": "number",
                    "description": "목표 가격"
                  },
                  "referenceLinks": {
                    "type": "string",
                    "description": "참조 링크 (JSON)"
                  },
                  "selectedUserId": {
                    "type": "integer",
                    "description": "선택된 사용자 ID (선택사항)"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    },
                    "description": "이미지 파일들 (최대 10개)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "프로젝트 등록 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "project": {
                      "$ref": "#/components/schemas/MJProject"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/mj-project": {
      "get": {
        "tags": ["MJ 프로젝트"],
        "summary": "프로젝트 목록 조회",
        "description": "MJ 프로젝트 목록을 조회합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "페이지 번호",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "페이지당 항목 수",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "검색어",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "상태 필터",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "프로젝트 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "projects": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/MJProject"
                      }
                    },
                    "total": {
                      "type": "integer"
                    },
                    "page": {
                      "type": "integer"
                    },
                    "limit": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/mj-project/{id}": {
      "get": {
        "tags": ["MJ 프로젝트"],
        "summary": "프로젝트 상세 조회",
        "description": "특정 MJ 프로젝트의 상세 정보를 조회합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "프로젝트 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "프로젝트 상세 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MJProject"
                }
              }
            }
          },
          "404": {
            "description": "프로젝트를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["MJ 프로젝트"],
        "summary": "프로젝트 삭제",
        "description": "MJ 프로젝트를 삭제합니다.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "프로젝트 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "프로젝트 삭제 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "프로젝트를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/warehouse/entries": {
      "post": {
        "tags": ["창고 관리"],
        "summary": "입고 등록",
        "description": "창고 입고 정보를 등록합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["projectId", "quantity", "entryDate"],
                "properties": {
                  "projectId": {
                    "type": "integer",
                    "description": "프로젝트 ID"
                  },
                  "quantity": {
                    "type": "integer",
                    "description": "입고 수량"
                  },
                  "entryDate": {
                    "type": "string",
                    "format": "date",
                    "description": "입고일"
                  },
                  "notes": {
                    "type": "string",
                    "description": "비고"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "입고 등록 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "entryId": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/warehouse/project/{projectId}/entries": {
      "get": {
        "tags": ["창고 관리"],
        "summary": "프로젝트별 입고 조회",
        "description": "특정 프로젝트의 입고 정보를 조회합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "description": "프로젝트 ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "입고 정보 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "projectId": {
                        "type": "integer"
                      },
                      "quantity": {
                        "type": "integer"
                      },
                      "entryDate": {
                        "type": "string",
                        "format": "date"
                      },
                      "notes": {
                        "type": "string"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/finance/incoming": {
      "post": {
        "tags": ["재무 관리"],
        "summary": "수입 등록",
        "description": "수입 정보를 등록합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["projectId", "amount", "paymentDate"],
                "properties": {
                  "projectId": {
                    "type": "integer",
                    "description": "프로젝트 ID"
                  },
                  "amount": {
                    "type": "number",
                    "description": "수입 금액"
                  },
                  "paymentDate": {
                    "type": "string",
                    "format": "date",
                    "description": "지급일"
                  },
                  "paymentType": {
                    "type": "string",
                    "description": "지급 유형"
                  },
                  "notes": {
                    "type": "string",
                    "description": "비고"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "수입 등록 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "incomingId": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["재무 관리"],
        "summary": "수입 목록 조회",
        "description": "수입 목록을 조회합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "페이지 번호",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "페이지당 항목 수",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "시작일",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "종료일",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "수입 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "incomings": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "projectId": {
                            "type": "integer"
                          },
                          "amount": {
                            "type": "number"
                          },
                          "paymentDate": {
                            "type": "string",
                            "format": "date"
                          },
                          "paymentType": {
                            "type": "string"
                          },
                          "notes": {
                            "type": "string"
                          },
                          "createdAt": {
                            "type": "string",
                            "format": "date-time"
                          }
                        }
                      }
                    },
                    "total": {
                      "type": "integer"
                    },
                    "page": {
                      "type": "integer"
                    },
                    "limit": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "tags": ["사용자 관리"],
        "summary": "내 정보 조회",
        "description": "현재 로그인한 사용자의 정보를 조회합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "사용자 정보 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["시스템"],
        "summary": "헬스 체크",
        "description": "API 서버의 상태를 확인합니다.",
        "responses": {
          "200": {
            "description": "서버 정상 동작",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "message": {
                      "type": "string",
                      "example": "Manufacturing API is running"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
} 